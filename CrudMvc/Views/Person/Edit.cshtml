@model CrudMvc.Models.Pessoa

@{
    ViewData["Title"] = "Home Page";
}


<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-12 mb-3">
        <a asp-action="Index" class="btn btn-secondary" role="button"><i class="fas fa-long-arrow-alt-left"></i> Voltar</a>
    </div>
    <div class="col-md-6 col-sm-12">
        <form asp-action="Edit"class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <div class="invalid-feedback">
                    Campo Obrigatorio
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" type="number" class="form-control" required />
                <span asp-validation-for="Telefone" class="text-danger"></span>
                <div class="invalid-feedback">
                    Campo Obrigatorio
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <div class="invalid-feedback">
                    Campo Obrigatorio
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
